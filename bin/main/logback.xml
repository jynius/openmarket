<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<configuration>

  <!-- 로그백 설정 spring.profiles.active에 따른 설정 적용 -->
  <if condition='isDefined("spring.profiles.active")'>
    <then>
      <include resource="profiles/logback-${spring.profiles.active}.xml" />
    </then>
  </if>

  <!-- 로그가 저장될 경로 -->
  <property name="LOG_PATH" value="/home/jynius/Workspace/SpringToolSuite/thrthn/logs" />
  
  <!-- 파일로 로그를 작성할 때 -->
  <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>logs/thrthn.log</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>log/ldata.%d{yyyy-MM-dd}.log</fileNamePattern>
      <maxHistory>30</maxHistory>
    </rollingPolicy>
    <encoder>
      <pattern>%date %level [%thread] %msg%n</pattern>
    </encoder>
  </appender>
  
  <!-- 콘솔에서 로그를 작성할 때 -->
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <!-- <pattern>%msg%n</pattern> -->
      <pattern>%date %level [%thread] %logger{10} [%file:%line] %msg%n</pattern>
    </encoder>
  </appender>
  
  <!-- 프로그램에서 적용될 로그 레벨 -->
  <root level="INFO">
    <appender-ref ref="FILE" />
    <appender-ref ref="STDOUT" />
  </root>
  
</configuration>